# GPU Configuration
CUDA_VISIBLE_DEVICES=0  # Adjust based on your GPU setup
EMBEDDING_DEVICE=cuda:0

# ChromaDB
CHROMA_COLLECTION_NAME=gait_papers
CHROMA_PERSIST_DIRECTORY=./storage/chromadb

# Embeddings
JINA_MODEL_NAME=jinaai/jina-embeddings-v4
EMBEDDING_BATCH_SIZE=8

# Document Processing
CHUNK_SIZE=500
CHUNK_OVERLAP=100

# API Server
API_HOST=0.0.0.0
API_PORT=8001

# vLLM Configuration
USE_VLLM=true
VLLM_API_URL=http://localhost:8000/v1
VLLM_MODEL=nemotron-nano-12b
VLLM_MAX_TOKENS=8192
VLLM_TEMPERATURE=0.6
VLLM_CONTEXT_LENGTH=131072

# Database
DATABASE_URL=sqlite:///./medical_gait.db

# Logging
LOG_LEVEL=INFO
DEBUG=false